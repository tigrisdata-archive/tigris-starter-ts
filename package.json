{
  "name": "tigris-starter-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "node ./node_modules/eslint/bin/eslint src/**/*.ts",
    "lint-fix": "node ./node_modules/eslint/bin/eslint --fix src/**/*.ts",
    "build": "npm run clean && npm install && npm run lint && npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tigrisdata/tigris-starter-ts.git"
  },
  "keywords": ["database", "data", "infrastructure"],
  "author": "Jigar Joshi (jmj@)",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/tigrisdata/tigris-starter-ts/issues"
  },
  "homepage": "https://github.com/tigrisdata/tigris-starter-ts#readme",
  "dependencies": {
    "@tigrisdata/core": "^1.0.0-alpha.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-unicorn": "^42.0.0",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.3"
  }
}
